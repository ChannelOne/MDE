{
  "name": "mde",
  "productName": "MDE",
  "homePage": "https://github.com/ChannelOne/MDE",
  "version": "0.1.1",
  "description": "A Markdown Editor",
  "main": "build/window.js",
  "scripts": {
    "start": "http-server ./ -p8085",
    "test": "mocha ./build/test --harmony",
    "updateVersion": "node ./build/versionPatch.js",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChannelOne/MDE.git"
  },
  "keywords": [
    "editor"
  ],
  "author": {
	  "name": "DZ Chan",
	  "email": "cdzos97@gmail.com",
	  "url": "http://blog.diverse.space"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChannelOne/MDE/issues"
  },
  "homepage": "https://github.com/ChannelOne/MDE#readme",
  "dependencies": {
    "@types/marked": "0.0.28",
    "@types/mocha": "^2.2.38",
    "codemirror": "^5.24.2",
    "gulp": "^3.9.1",
    "gulp-cached": "^1.1.0",
    "gulp-sourcemaps": "^2.1.1",
    "gulp-typescript": "^3.0.2",
    "js-beautify": "^1.6.11",
    "list-diff2": "^0.1.4",
    "marked": "^0.3.6",
    "sinon": "^1.17.6",
    "typescript-collections": "^1.2.3",
    "typescript-domhelper": "^1.1.0"
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-builder": "^14.5.3",
    "electron-winstaller": "^2.5.1",
    "gulp-typedoc": "^2.0.2",
    "mocha": "^3.2.0",
    "typedoc": "^0.5.5",
    "typescript": "^2.1.6"
  },
  "build": {
    "appId": "MDE Editor",
    "win": {
      "icon": "./build_resources/icon.ico"
    },
	"linux": {
		"category": "Office",
		"description": "A markdown editor built on Electron.",
		"target": ["deb", "tar.gz"],
		"icon": "./build_resources/logo"
	},
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown"
      }
    ],
    "directories": {
      "buildResources": "build_resources"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "include": "./build_resources/installer.nsh",
      "runAfterFinish": false
    }
  }
}
